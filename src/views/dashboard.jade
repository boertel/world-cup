    section
        h2.title Games

        div.games
            each val in ['A', 'B', 'C']
                div.group
                    h3.title Group #{val}
                    each val in [1,2,3,4]
                        div.game
                            div.date Thu, 28 May at 10:00
                            div.team France
                            div.score ? - ?
                            div.team Brazil

    section.live
        h3.title France vs. Brazil
            span.subtle &nbsp;– Thu, 28 May at 10:00

        div.scores
            div.score.win.flag.flag-france 3
            div.score.separator –
            div.score.flag.flag-brazil 0

        div.users
            div
                ul
                    li Neil McCauley

            div
