colors = {
    primary: #4eb11e,
    secondary: #b7e696,
    saved: #4758A9
    subtle: #f6f6f6,
    win: #4eb11e,
    tie: #fee784,
    loss: #e14644
}

*
    box-sizing: border-box;

body
    font-size: 14px
    font-family: 'helvetica neue', Helvetica, Arial, sans-serif
    font-weight: 300
    margin: 0
    padding: 0

h1, h2, h3, h4, h5
    font-weight: inherit

    &.title:before
        color: colors.subtle
        content: "#"
        padding-right: 0.3em

section
    margin-bottom: 1.5em

a
    color: #2996cc
    text-decoration: none

p
    margin: 0
    padding: 0

ul
    padding: 0
    margin: 0.4em 0
    list-style: none

.left
    float: left

.right
    float: right

.center
    text-align: center


.page-width
    max-width: 645px
    padding: 0 20px
    margin: auto

header
    text-align: center
    background: colors.primary
    color: colors.secondary
    padding: 20px 0 25px
    width: 100%
    color: #fff

.notification
    padding: 10px
    color: colors.primary
    background: colors.secondary

.notification.warning
    background-color: colors.tie
    color: darken(colors.tie, 60%)

.notification.error
    background-color: colors.loss
    color: darken(colors.loss, 60%)

#content
    margin: 20px auto


.cta
    margin: 60px 0

.btn-facebook
    padding: 20px
    font-size: 24px
    background-color: #4D68A2
    color: #fff
    border-radius: 6px

    &:hover
        color: #fff

div.game
    margin-bottom: 20px
    padding: 20px 10px
    height: 80px;

    &.saved
        border-left: 4px solid colors.saved

    &.separator
        border-top: 1px solid #DDDDDD

    &:hover
        cursor: pointer
        background-color: colors.subtle

    .flag

        img
            width: 50%

        &.right
            img
                float: right
                margin-left: 10px

        &.left
            img
                margin-right: 10px


form.bet
    margin-top: 20px
    margin-bottom: 20px
    padding: 20px
    background-color: #f6f6f6

    .flags > div
        text-align: center

    input
        margin: 10px auto 0 auto !important
        width: 60%
        text-align: center
        font-size: 36px

    label, .versus
        font-size: 16px
        text-align: center

    .submit
        margin-top: 20px
        text-align: center

.bets
    margin-bottom: 40px
    padding-bottom: 20px
    border-bottom: 1px solid colors.subtle

.bets-title
    margin-bottom: 20px

.bet-row
    padding: 5px 15px 5px 15px
    overflow: hidden

    &.me
        font-weight: bold

    &.perfect
        background-color: #B7DFA4

    &.won
        background-color: #DAEED1

.help
    margin-top: 40px

footer
    border-top: 1px solid colors.subtle
    text-align: center

    li
        margin-right: 1em
        display: inline-block
