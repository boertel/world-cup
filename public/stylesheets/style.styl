colors = {
    primary: #4eb11e,
    secondary: #b7e696,
    saved: #8191DA,
    subtle: #f6f6f6,
    perfect: #FFE557,
    win: #9ECA8C,
    lost: #FF7979
}

*
    box-sizing: border-box

body
    font-size: 14px
    font-family: 'helvetica neue', Helvetica, Arial, sans-serif
    font-weight: 300
    margin: 0
    padding: 0

h1, h2, h3, h4, h5
    font-weight: inherit

    &.title:before
        color: colors.subtle
        content: "#"
        padding-right: 0.3em

section
    margin-bottom: 1.5em

a
    cursor: pointer
    color: #2996cc
    text-decoration: none

p
    margin: 0
    padding: 0

ul
    padding: 0
    margin: 0.4em 0
    list-style: none

.left
    float: left

.right
    float: right

.center
    text-align: center


.page-width
    max-width: 645px
    padding: 0 10px
    margin: auto

.ajax-loader
    width: 32px
    height: 32px
    background-image: url(../images/ajax-loader.gif)
    margin: 0 auto

header
    background: colors.primary
    color: colors.secondary
    padding: 10px 0
    width: 100%
    color: #fff

.pure-menu.pure-menu-open, .pure-menu.pure-menu-horizontal li .pure-menu-children
    background: none

.pure-menu .pure-menu-heading, .pure-menu a, .pure-menu .pure-menu-can-have-children>li:after
    color: #fff

.pure-menu li a:hover, .pure-menu li a:focus
    background: darken(colors.primary, 20%)

.pure-menu-selected
    background: darken(colors.primary, 10%)

.profile-points
    margin-top: 2px !important

.avatar
    width: 33px
    height: 33px
    margin-top: -5px
    border-radius: 3px


.notification
    padding: 10px
    color: colors.primary
    background: colors.secondary

.notification.warning

.notification.error

#content
    margin: 20px auto


.cta
    margin: 60px 0

.btn-facebook
    padding: 20px
    font-size: 24px
    background-color: #4D68A2
    color: #fff
    border-radius: 6px

    &:hover
        color: #fff


.games-group
    border-bottom: 1px solid #DDDDDD

.separator
    cursor: pointer

    .date
        float: left
        margin: 10px 0
        font-size: 125%

    .bet-summary
        float: right
        width: 40px

.little-score
    width: 6px
    height: 13px
    margin-top: 4px
    margin-right: 2px
    display: inline-block
    background-color: #DDDDDD

    &.big
        width: 10px
        height: 20px
        cursor: pointer

    &.saved
        background-color: colors.saved

    &.win
        background-color: colors.win

    &.perfect
        background-color: colors.perfect

    &.lost
        background-color: colors.lost

.showPast .game.past
    display: block !important

div.game
    margin-bottom: 20px
    padding: 20px 10px 15px 10px
    border: 0
    border-style: solid
    border-left-width: 4px
    border-color: #DDDDDD

    &.past
        display: none

    &.saved
        border-color: colors.saved

        &:hover
            background-color: rgba(colors.saved, 25%)

    &.win
        border-color: colors.win

        &:hover
            background-color: rgba(colors.win, 25%)

    &.perfect
        border-color: colors.perfect

        &:hover
            background-color: rgba(colors.perfect, 25%)

    &.lost
        border-color: colors.lost

        &:hover
            background-color: rgba(colors.lost, 25%)

    &:hover
        cursor: pointer
        background-color: colors.subtle

    .subtitle
        > div
            padding-bottom: 5px
        .group
            color: #9e9e9e

    .flag
        width: 40px

        img
            width: 100%

        &.right
            margin-left: 10px
            img
                float: right

        &.left
            margin-right: 10px

    .game-score
        font-size: 150%
        padding-top: 5px

        &.hidden
            visibility: hidden

    .bet-score
        color: #9E9E9E

.legend
    margin-top: 3em

    ul
        margin-left: 2em

.leaderboard
    padding: 0 10px

    .me
        font-weight: bold

    li
        margin: 8px 0

form.bet
    margin-top: 20px
    margin-bottom: 20px
    padding: 20px
    background-color: #f6f6f6

    .flags > div
        text-align: center

    input
        margin: 10px auto 0 auto !important
        width: 100%
        text-align: center
        font-size: 36px


    label, .versus
        font-size: 150%
        margin-top: 0.25em
        text-align: center

    .submit
        margin-top: 20px
        text-align: center

.bets
    margin-bottom: 40px
    padding-bottom: 20px
    border-bottom: 1px solid colors.subtle

    > div
        margin-bottom: 30px

    &.friends .not-friend
        display: none;
h2
    .selected
        font-weight: bold

.bets-title
    margin-bottom: 20px

.bet-row
    padding: 5px 15px 5px 15px
    overflow: hidden

    &.me
        font-weight: bold

    &.perfect
        background-color: colors.perfect

    &.won
        background-color: colors.win

.help
    margin-top: 40px


.line
    margin: 2em 0

.placeholder
    border: 4px dashed #DDDDDD

    p
        padding: 2em


footer
    border-top: 1px solid colors.subtle
    text-align: center

    li
        margin-right: 1em
        display: inline-block
